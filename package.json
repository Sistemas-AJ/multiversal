{
  "name": "chambeador",
  "version": "1.0.0",
  "description": "Aplicación de escritorio para análisis multivariable",
  "main": "Frontend/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --serve",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "ALIXTER",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "electron": "^38.1.0",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.alixter.chambeador",
    "productName": "Chambeador",
    "directories": {
      "output": "dist"
    },
    "files": [
      "Frontend/**/*",
      "Backend/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
